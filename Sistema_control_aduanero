<script>

  const views = ["ingreso","pdi","manual","sag","reportes"];
  const tabBar = document.getElementById("tabs");
  const showView = (name) => {
    views.forEach(v => {
      document.getElementById("view-"+v).classList.toggle("hide", v !== name);
    });
    [...tabBar.querySelectorAll(".tab")].forEach(b => {
      b.classList.toggle("active", b.dataset.view === name);
    });
  };
  tabBar.addEventListener("click", (e) => {
    const btn = e.target.closest(".tab");
    if(!btn) return;
    showView(btn.dataset.view);
  });

  
  const showToast = (id) => {
    const el = document.getElementById(id);
    el.classList.add("show");
    setTimeout(()=> el.classList.remove("show"), 2500);
  };
  const nowText = () => {
    const d = new Date();
    const pad = (n)=> String(n).padStart(2,"0");
    return `${pad(d.getDate())}/${pad(d.getMonth()+1)}/${d.getFullYear()} ${pad(d.getHours())}:${pad(d.getMinutes())}`;
  };

  
  document.getElementById("btn_ingresar").addEventListener("click", () => {
    const id = document.getElementById("ing_id").value.trim();
    const nom = document.getElementById("ing_nombre").value.trim();
    const nac = document.getElementById("ing_nac").value.trim();
    const fec = document.getElementById("ing_fecha").value.trim();
    if(!id || !nom || !nac || !fec){
      showToast("toast_ing_bad"); return;
    }
    showToast("toast_ing_ok");
   
    addReporte({
      tipo:"Ingreso Pasajero",
      ident:id, nombre:nom,
      detalles:"Ingreso por paso fronterizo",
      estado:{label:"Registrado", cls:"b-info"}
    });
  });

  
  document.getElementById("btn_pdi").addEventListener("click", () => {
    const id = document.getElementById("pdi_id").value.trim();
    if(!id){ showToast("toast_ing_bad"); return; }
    showToast("toast_pdi_warn");
    
    document.getElementById("man_id").value = id;
    document.getElementById("man_obs").value = "Validaci√≥n PDI no disponible";
    addReporte({
      tipo:"Validaci√≥n PDI",
      ident:id, nombre:"-",
      detalles:"PDI no disponible",
      estado:{label:"Derivado", cls:"b-warn"}
    });
    setTimeout(()=> showView("manual"), 900);
  });

 
  document.getElementById("btn_derivar").addEventListener("click", () => {
    const id = document.getElementById("man_id").value.trim() || "-";
    const nom = document.getElementById("man_nombre").value.trim() || "-";
    const obs = document.getElementById("man_obs").value.trim();
    if(!obs){ showToast("toast_man_bad"); return; }
    showToast("toast_man_ok");
   
    const tbody = document.querySelector("#tabla_manual tbody");
    const newId = tbody.querySelectorAll("tr").length + 1;
    const tr = document.createElement("tr");
    tr.dataset.estado = "pendiente";
    tr.innerHTML = `
      <td>${newId}</td>
      <td>${escapeHtml(id)}</td>
      <td>${escapeHtml(nom)}</td>
      <td>${escapeHtml(obs)}</td>
      <td>${nowText()}</td>
      <td><span class="badge b-warn">Pendiente</span></td>
      <td class="right"><button class="btn secondary btn-resolver">Resolver</button></td>
    `;
    tbody.prepend(tr);
    addReporte({
      tipo:"Revisi√≥n Manual",
      ident:id, nombre:nom,
      detalles:obs,
      estado:{label:"Pendiente", cls:"b-warn"}
    });
  });

  
  document.getElementById("tabla_manual").addEventListener("click", (e) => {
    const tr = e.target.closest("tr");
    if(!tr) return;

    if(e.target.classList.contains("btn-resolver")){
      tr.dataset.estado = "resuelto";
      tr.children[5].innerHTML = `<span class="badge b-ok">Resuelto</span>`;
      tr.children[6].innerHTML = `<button class="btn secondary btn-reabrir">Reabrir</button>`;
      addReporte({
        tipo:"Revisi√≥n Manual",
        ident: tr.children[1].textContent,
        nombre: tr.children[2].textContent,
        detalles:"Caso resuelto",
        estado:{label:"Resuelto", cls:"b-ok"}
      });
    }
    if(e.target.classList.contains("btn-reabrir")){
      tr.dataset.estado = "pendiente";
      tr.children[5].innerHTML = `<span class="badge b-warn">Pendiente</span>`;
      tr.children[6].innerHTML = `<button class="btn secondary btn-resolver">Resolver</button>`;
      addReporte({
        tipo:"Revisi√≥n Manual",
        ident: tr.children[1].textContent,
        nombre: tr.children[2].textContent,
        detalles:"Caso reabierto",
        estado:{label:"Pendiente", cls:"b-warn"}
      });
    }
  });

  
  document.getElementById("btn_sag").addEventListener("click", () => {
    const id = document.getElementById("sag_id").value.trim();
    const prod = document.getElementById("sag_prod").value.trim();
    if(!id || !prod){ showToast("toast_sag_bad"); return; }
    showToast("toast_sag_ok");
   
    const tbody = document.querySelector("#tabla_sag tbody");
    const newId = tbody.querySelectorAll("tr").length + 1;
    const cant = document.getElementById("sag_cant").value.trim() || "-";
    const obs = document.getElementById("sag_desc").value.trim() || "-";
    const tr = document.createElement("tr");
    tr.innerHTML = `
      <td>${newId}</td><td>${escapeHtml(id)}</td><td>${escapeHtml(prod)}</td><td>${escapeHtml(cant)}</td>
      <td>${nowText()}</td><td><span class="badge b-info">En revisi√≥n</span></td><td>${escapeHtml(obs)}</td>
    `;
    tbody.prepend(tr);

    addReporte({
      tipo:"Declaraci√≥n SAG",
      ident:id, nombre:"-",
      detalles:`${prod} - ${cant}`,
      estado:{label:"En revisi√≥n", cls:"b-info"}
    });
  });

  const dataReportes = [
    {id:1, fecha:"21/01/2026 10:45", tipo:"Ingreso Pasajero", ident:"16.123.456-7", nombre:"Carlos Mu√±oz", detalles:"Ingreso por paso fronterizo", estado:{label:"Registrado", cls:"b-info"}},
    {id:2, fecha:"21/01/2026 10:30", tipo:"Validaci√≥n PDI", ident:"18.234.567-8", nombre:"Mar√≠a Gonz√°lez", detalles:"Identidad no validada", estado:{label:"Derivado", cls:"b-warn"}},
    {id:3, fecha:"21/01/2026 09:30", tipo:"Declaraci√≥n SAG", ident:"AR456789", nombre:"Roberto Fern√°ndez", detalles:"Semillas de trigo - 500g", estado:{label:"Aprobado", cls:"b-ok"}},
    {id:4, fecha:"21/01/2026 09:15", tipo:"Revisi√≥n Manual", ident:"US789456", nombre:"John Smith", detalles:"Validaci√≥n PDI no disponible", estado:{label:"Resuelto", cls:"b-ok"}},
  ];

  const renderReportes = (tipo = "Todos") => {
    const tbody = document.querySelector("#tabla_rep tbody");
    tbody.innerHTML = "";
    const filtered = dataReportes.filter(r => tipo === "Todos" ? true : r.tipo === tipo);
    filtered.forEach((r, idx) => {
      const tr = document.createElement("tr");
      tr.innerHTML = `
        <td>${idx+1}</td>
        <td>${r.fecha}</td>
        <td>${r.tipo}</td>
        <td>${escapeHtml(r.ident)}</td>
        <td>${escapeHtml(r.nombre)}</td>
        <td>${escapeHtml(r.detalles)}</td>
        <td><span class="badge ${r.estado.cls}">${r.estado.label}</span></td>
      `;
      tbody.appendChild(tr);
    });
  };

  function addReporte({tipo, ident, nombre, detalles, estado}){
    dataReportes.unshift({
      id: dataReportes.length + 1,
      fecha: nowText(),
      tipo, ident, nombre, detalles,
      estado
    });
    renderReportes(document.getElementById("rep_tipo").value || "Todos");
  }

  document.getElementById("btn_rep").addEventListener("click", () => {
    renderReportes(document.getElementById("rep_tipo").value || "Todos");
  });
  document.getElementById("btn_limpiar").addEventListener("click", () => {
    document.getElementById("rep_ini").value = "";
    document.getElementById("rep_fin").value = "";
    document.getElementById("rep_tipo").value = "Todos";
    renderReportes("Todos");
  });

  document.getElementById("btn_exportar").addEventListener("click", () => {
    const tipo = document.getElementById("rep_tipo").value || "Todos";
    const filtered = dataReportes.filter(r => tipo === "Todos" ? true : r.tipo === tipo);
    const rows = [
      ["Fecha/Hora","Tipo Movimiento","Identificaci√≥n","Nombre","Detalles","Estado"],
      ...filtered.map(r => [r.fecha,r.tipo,r.ident,r.nombre,r.detalles,r.estado.label])
    ];
    const csv = rows.map(r => r.map(cell => `"${String(cell).replaceAll('"','""')}"`).join(",")).join("\n");
    const blob = new Blob([csv], {type:"text/csv;charset=utf-8;"});
    const url = URL.createObjectURL(blob);
    const a = document.createElement("a");
    a.href = url; a.download = "reportes_aduanas.csv";
    document.body.appendChild(a); a.click(); a.remove();
    URL.revokeObjectURL(url);
  });

  function escapeHtml(str){
    return String(str).replaceAll("&","&amp;").replaceAll("<","&lt;").replaceAll(">","&gt;");
  }

  // Inicial
  renderReportes("Todos");
</script>
</body>
</html>
